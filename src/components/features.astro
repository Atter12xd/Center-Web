---
import Link from "@components/ui/link.astro";
import { localizePath } from "astro-i18next";
// @ts-ignore
import { Icon } from "astro-icon/components";
import { t } from "i18next";

const features = [
	{
		title: "Acceso a mercados globales",
		description: "features.global_trade",
		icon: "bx:bxs-briefcase",
		url: "#",
	},
	{
		title: "Gestión de cadena de suministro",
		description: "features.supply_chain",
		icon: "bx:bxs-window-alt",
		url: "#",
	},
	{
		title: "Logística internacional",
		description: "features.international_logistics",
		icon: "bx:bxs-data",
		url: "#",
	},
	{
		title: "Asesoría en normativas",
		description: "features.regulatory_consulting",
		icon: "bx:bxs-bot",
		url: "#",
	},
	{
		title: "Atención personalizada",
		description: "features.personalized_support",
		icon: "bx:bxs-file-find",
		url: "#",
	},
	{
		title: "Conexión con proveedores",
		description: "features.business_connections",
		icon: "bx:bxs-user",
		url: "#",
	},
	{
		title: "Optimización de procesos",
		description: "features.process_optimization",
		icon: "bx:bxs-user",
		url: "#",
	},
	{
		title: "Noticias y actualizaciones",
		description: "features.industry_news",
		icon: "bx:bxs-user",
		url: "/blog",
	},
	{
		title: "Automatización de procesos",
		description: "features.process_automation",
		icon: "bx:bxs-user",
		url: "#",
	},
];
---

<div class="relative mx-auto max-w-5xl px-6 lg:px-8">
	<div class="mx-auto max-w-2xl lg:text-center">
		<h2 class="text-base font-semibold leading-7 text-black dark:text-white">{t("features.title")}</h2>
		<p class="mt-2 text-3xl font-bold tracking-tight text-black dark:text-white sm:text-4xl">{t("features.subtitle")}</p>
		<p class="mt-6 text-lg leading-8 text-gray-900 dark:text-gray-100">
			{t("features.description")}
		</p>
	</div>
	<div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
		<dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
			{
				features.map((item) => (
					<div class="flex flex-col">
						<dt class="flex items-center gap-x-3 text-base font-semibold leading-7 text-black dark:text-white">
							<div class="h-5 w-5 flex-none text-black dark:text-white">
								<Icon name={item.icon} />
							</div>
							{item.title}
						</dt>
						<dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-900 dark:text-gray-100">
							<p class="flex-auto">{t(item.description)}</p>
							<p class="mt-6">
								<Link href={item.url} style="muted" size="xs" class="leading-6 text-left text-black dark:text-white">
									{t("features.learn_more")}{" "}
									<span class="pl-1 text-black dark:text-white" aria-hidden="true">
										→
									</span>
								</Link>
							</p>
						</dd>
					</div>
				))
			}
		</dl>
	</div>
</div>
