---
import Container from "@components/container.astro";
import Faq from "@components/faq.astro";
import Logos from "@components/logos.astro";
import Pricing from "@components/pricing.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { changeLanguage } from "i18next";

changeLanguage("es");

const pricingData = [
	{
		name: "Básico",
		price: "Desde S/100",
		popular: false,
		features: [
			"Transporte de carga consolidada nacional",
			"Envíos a países andinos",
			"Carga general y paquetería",
			"Entrega en plazos estándar",
			"Seguimiento básico",
		],
		button: {
			text: "Cotizar ahora",
			link: "https://wa.me/51965822970?text=Hola,%20quiero%20cotizar%20el%20plan%20Básico%20(Desde%20S/100)."
		},
	},
	{
		name: "Estándar",
		price: "Desde S/250",
		popular: true,
		features: [
			"Transporte de carga sobredimensionada y especial",
			"Logística para equipos industriales",
			"Seguros y permisos incluidos",
			"Prioridad en tiempos de entrega",
			"Seguimiento en tiempo real",
		],
		button: {
			text: "Cotizar ahora",
			link: "https://wa.me/51965822970?text=Hola,%20quiero%20cotizar%20el%20plan%20Estándar%20(Desde%20S/250)."
		},
	},
	{
		name: "Premium",
		price: "A medida",
		popular: false,
		features: [
			"Transporte de personal en autos, camionetas y buses",
			"Servicios VIP para empresas y eventos",
			"Atención personalizada 24/7",
			"Flexibilidad en rutas y horarios",
			"Seguridad y confort garantizados",
		],
		button: {
			text: "Contáctanos",
			link: "https://wa.me/51965822970?text=Hola,%20quiero%20cotizar%20el%20plan%20Premium%20(A%20medida).",
		},	
	},
];
---

<Layout title="Tarifas">
	<Container>
		<Sectionhead>
			<Fragment slot="title">Nuestros Precios</Fragment>
			<Fragment slot="desc">Soluciones de transporte adaptadas a tus necesidades.</Fragment>
		</Sectionhead>

		<div class="grid md:grid-cols-3 gap-10 mx-auto max-w-4xl mt-20">
			{pricingData.map((item) => <Pricing plan={item} />)}
		</div>
		<Faq />
	</Container>
</Layout>
