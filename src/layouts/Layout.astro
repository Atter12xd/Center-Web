---
import { ViewTransitions } from "astro:transitions";
import { pwaInfo } from "virtual:pwa-info";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter";
import { HeadHrefLangs } from "astro-i18next/components";
import { SEO } from "astro-seo";
import i18next from "i18next";

export interface Props {
	title?: string;
	lang?: string;
}

const MAINTENANCE_MODE = String(import.meta.env.PUBLIC_MAINTENANCE_MODE).trim().toLowerCase() === "true";

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const resolvedImageWithDomain = new URL("/meta/opengraph.png", Astro.site).toString();
const { title, lang = null } = Astro.props;

const makeTitle = title
	? `${title} | Center Trading Corporation`
	: "Center Trading Corporation - L칤deres en Comercio Global";
---

<!doctype html>
<html lang={lang ?? i18next.language}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content="#004aad" />
		<HeadHrefLangs />

		<ViewTransitions />

		<!-- Global CSS -->
		<link rel="stylesheet" href="/index.css" />

		<SEO
			title={makeTitle}
			description="Center Trading Corporation es una empresa especializada en comercio internacional, ofreciendo productos y soluciones de alta calidad."
			canonical={canonicalURL}
			openGraph={{
				basic: {
					url: canonicalURL,
					type: "website",
					title: `Center Trading Corporation - Comercio Internacional`,
					image: resolvedImageWithDomain,
				},
				image: {
					alt: "Center Trading Corporation - Comercio Internacional",
				},
			}}
		/>

		<script is:inline>
			function handleThemeChange() {
				if (localStorage.theme === "dark" || (!("theme" in localStorage) && window.matchMedia("(prefers-color-scheme: dark)").matches)) {
					document.documentElement.classList.add("dark");
				} else {
					document.documentElement.classList.remove("dark");
				}
			}
			handleThemeChange();
			document.removeEventListener("astro:after-swap", handleThemeChange);
			document.addEventListener("astro:after-swap", handleThemeChange);
		</script>

		{pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
		<script src="/src/pwa.ts"></script>
	</head>
	<body class="dark:bg-gray-900 bg-white">
		{MAINTENANCE_MODE ? (
			<!-- 游뚾 Modo mantenimiento -->
			<div class="flex min-h-screen items-center justify-center bg-gray-100 dark:bg-gray-900 text-center">
				<div class="p-8 bg-white dark:bg-gray-800 rounded-lg shadow-lg">
					<h1 class="text-3xl font-bold text-red-600 dark:text-red-400">游뚾 P치gina en mantenimiento 游뚾</h1>
					<p class="text-lg text-gray-700 dark:text-gray-300 mt-4">
						Este sitio web est치 temporalmente deshabilitado por falta de pago.
					</p>
					<p class="text-gray-600 dark:text-gray-400 mt-2">
						Para m치s informaci칩n, cont치ctanos en: 
						<a href="tel:+51988774507" class="text-blue-500 hover:underline">
							+51 988 774 507
						</a>
					</p>
				</div>
			</div>
		) : (
			<!-- 游깷 Sitio normal -->
			<>
				<Navbar />
				<slot />
				<Footer />
			</>
		)}
		<style is:global>
			/* Optimizaci칩n de rendimiento */
			img {
				content-visibility: auto;
			}
		</style>
	</body>
</html>
